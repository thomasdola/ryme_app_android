<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardPreventCornerOverlap="false"
    android:transitionName="@string/track_transition_string"
    android:id="@+id/track_cv"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/track_cover_avatar"
            android:contentDescription="@null"
            android:layout_marginEnd="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/track_title_text_view"
                            android:textColor="@color/blueBlack"/>


                        <com.github.curioustechizen.ago.RelativeTimeTextView
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lighterBlueBlack"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="10sp"
                            android:id="@+id/track_release_date_text_view"
                            android:gravity="end"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="2"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/info_track_stream"
                        android:src="@drawable/ic_action_play_info_blueblack"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@null"/>

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lighterBlueBlack"
                        android:id="@+id/info_track_stream_text"
                        android:layout_alignBottom="@+id/info_track_stream"
                        android:layout_toEndOf="@+id/info_track_stream" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/info_track_favorite"
                        android:src="@drawable/ic_action_like_fill_blueblack"
                        android:layout_marginStart="32dp"
                        android:layout_alignBottom="@+id/info_track_stream"
                        android:layout_toEndOf="@+id/info_track_stream_text"
                        android:contentDescription="@null"/>

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lighterBlueBlack"
                        android:id="@+id/info_track_favorite_text"
                        android:layout_alignBottom="@+id/info_track_stream_text"
                        android:layout_toEndOf="@+id/info_track_favorite" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/info_track_download"
                        android:layout_alignBottom="@+id/info_track_stream"
                        android:layout_toEndOf="@+id/info_track_favorite_text"
                        android:layout_marginStart="32dp"
                        android:src="@drawable/ic_action_downloads_blueblack"
                        android:contentDescription="@null"/>

                    <TextView
                        android:textSize="12sp"
                        android:layout_marginEnd="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lighterBlueBlack"
                        android:id="@+id/info_track_download_text"
                        android:layout_alignTop="@+id/info_track_favorite_text"
                        android:layout_toEndOf="@+id/info_track_download" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>