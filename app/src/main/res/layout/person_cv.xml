<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/person_cv"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/person_photo"
            android:contentDescription="@null"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/stonebwoy1"
            android:layout_marginEnd="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/person_photo"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Stone Boy - Pull Up ft Patoranky and Thomas"
                        android:id="@+id/track_title_text_view" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="3d ago"
                        android:id="@+id/track_release_date_text_view"
                        android:gravity="end"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/info_track_stream"
                    android:src="@drawable/ic_info_stream"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="19dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2k"
                    android:id="@+id/info_track_stream_text"
                    android:layout_alignBottom="@+id/info_track_stream"
                    android:layout_toEndOf="@+id/info_track_stream" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/info_track_favorite"
                    android:src="@drawable/ic_info_favorite"
                    android:layout_alignTop="@+id/info_track_stream_text"
                    android:layout_toEndOf="@+id/info_track_stream_text"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2k"
                    android:id="@+id/info_track_favorite_text"
                    android:layout_alignBottom="@+id/info_track_stream_text"
                    android:layout_toEndOf="@+id/info_track_favorite" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/info_track_download"
                    android:layout_alignBottom="@+id/info_track_stream"
                    android:layout_toEndOf="@+id/info_track_favorite_text"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_info_download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="3k"
                    android:id="@+id/info_track_download_text"
                    android:layout_alignTop="@+id/info_track_favorite_text"
                    android:layout_toEndOf="@+id/info_track_download" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageView5"
                    android:layout_alignBottom="@+id/info_track_download"
                    android:layout_toEndOf="@+id/info_track_download_text"
                    android:src="@drawable/ic_info_view"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="4k"
                    android:id="@+id/textView5"
                    android:layout_alignBottom="@+id/info_track_download_text"
                    android:layout_toEndOf="@+id/imageView5" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageView6"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:src="@drawable/ic_info_comment"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="8k"
                    android:id="@+id/textView6"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toEndOf="@+id/imageView6" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>